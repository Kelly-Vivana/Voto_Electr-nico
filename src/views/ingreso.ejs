<!DOCTYPE html>
<html lang="es">
<%- include('partials/head'); %>
<div class="content">
  <div class="row">
    <div id="ingreso" style="display: block;" class="col-md-12">
      <% if (login) {%>
      <h2 style="margin-top: 20px;">Bienvenido a las votaciones UG</h2>
      <div class="Formatos">
        <% listas.forEach((l)=>{%>
        <div class="TpTx">
          <h2>Lista <%= l.id%></h2>
          <% candidatos.forEach((c)=>{ %>
          <% if (c.lista === l.id) {%>
          <option value="<%= c.lista%>"><%=c.cargo + ': '+c.nombre%></option>
          <% } });%>
        </div>
        <% });%>
      </div>
      <%  } %>
      <div id="loader">
        <p class="text-center">Loading...</p>
      </div>
        
    <button onclick="myFunction()">Clickeame</button>
      <div id="content" style="display: none;">
        <form action="/votos" method="POST" onSubmit="return App.castVote();" >
          <input name="cedul" value="<%= cedula %>" style="display: none;">
          <div class="form-group">
            <label  style="margin-bottom: 30px; margin-top: 20px;" for="candidatesSelect"><%= name%> Selecciona la lista</label>
            <select style="margin-bottom: 30px ;" class="form-control" id="candidatesSelect">
            </select>
          </div>
          <button type="submit"  class="btn btn-primary">Votar</button>
          <hr />
        </form>
      </div>
      <p id="accountAddress" class="text-center"></p>
      
    </div>
  </div>
</div>
</div>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
<!-- Include all compiled plugins (below), or include individual files as needed -->
<script src="js/web3.min.js"></script>
<script src="js/truffle-contract.js"></script>
<script src="js/app.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js"
  integrity="sha384-ygbV9kiqUc6oa4msXn9868pTtWMgiQaeYH7/t7LECLbyPA2x65Kgf80OJFdroafW" crossorigin="anonymous"></script>

<script src="js/perfect-scrollbar.jquery.min.js"></script>
<script src="js/material-dashboard.js"></script>
<% if(typeof alert != "undefined") { %>
  <script>
      Swal.fire({
          alert: '<%= alert%>',
          title: '<%= alertTitle %>',
          text: '<%= alertMessage%>',
          icon: '<%= alertIcon %>',
          showConfimButton: <%= showConfirmButton %>,
          timer: <%= time%>

      }).then(()=>{
          window.location ='/<%=ruta%>'
      })
    window.onload =  function myFunction() {
    var x = document.getElementById("ingreso");
    if (x.style.display === "block") {
        x.style.display = "none";
    } else {
        x.style.display = "block";
    }
}
  </script>
<%}%>
</body>

</html>
</body>

</html>